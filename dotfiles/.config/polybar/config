[module/kubecontext]
type = custom/script
exec = echo "$(kubectl config current-context | cut -d '_' -f 4) "
interval = 15
format-background = ${colors.solarizedCyan}
format-underline = #268bd2
format-prefix = "%{B#001D25 F#1F75C7}ÓÇ≤%{B#1F75C7 F#FFFFFF} ‚ò∏ "

[module/topproc]
type = custom/script
exec = echo "$(ps -Ao comm,pcpu --sort=-pcpu | head -n 2 | tail -n1 | sed 's/  */ /g') "
interval = 2
format-prefix = "%{F#3c3c3c}ÓÇ≤%{B#3c3c3c F#FFFFFF} "

[module/fanspeed]
type = custom/script
exec = echo "$(tail -n1 /var/log/macfanctl.log 2>&1 | cut -d' ' -f  2,5 | tr -d , ) "
interval = 5
format-background = ${colors.solarizedCyan}
format-underline = #268bd2
format-prefix = "%{B#001D25 F#212C2C}ÓÇ≤%{B#212C2C F#FFFFFF} "

[module/replicatedpodbad]
type = custom/script
exec = echo "$(kubectl get pods -ltier=master 2>&1 | grep -v Terminating | tail -n1 | grep -Ev 'Running|did you specify|No resources|Unable to|server doesn.t have')"
interval = 10
format-background = #FFB52F
format-underline = #268bd2
format-prefix = "%{B#444444 F#FFB52F}ÓÇ≤%{B#FFB52F F#FFFFFF } %{F#FFFFFF}¬Æ %{F#FFFFFF }"
# format-suffix = " %{B#444444 F#FFB52F}ÓÇ∞%{B#444444 F#FFFFFF} "

[module/replicatedpodhealthy]
type = custom/script
exec = echo "$(kubectl get pods -ltier=master 2>&1 | grep -v 'Error in configuration' | grep -v Terminating | tail -n1 | grep -E 'Running')"
interval = 10
format-background = #FFFFFF
format-underline = #268bd2
format-prefix = "%{B#444444 F#FFFFFF}ÓÇ≤%{B#FFFFFF F#10A1C3 } %{F#FF0000}‚Ñù %{F#10A1C3 }"
# format-suffix = " %{B#444444 F#FFFFFF}ÓÇ∞%{B#444444 F#10A1C3} "
