function tbreak() {
    if [ $# -ne 2 ]; then
        echo "Usage: tbreak <pane_number> <new_window_name>"
        return 1
    fi

    local pane_num=$1
    local window_name=$2
    local current_session=$(tmux display-message -p '#S')
    local current_window=$(tmux display-message -p '#W')

    # Check if a window with that name already exists
    if tmux list-windows -t ${current_session} -F '#{window_name}' | grep -q "^${window_name}$"; then
        # Join to existing window
        tmux join-pane -s ${current_session}:${current_window}.${pane_num} -t ${current_session}:${window_name}
    else
        # Create new window
        tmux break-pane -s ${current_session}:${current_window}.${pane_num} -n ${window_name}
    fi
}
