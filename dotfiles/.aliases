# hard reset to upstream branch
function gforce () {
        if [ $# -ne 1 ]; then
            echo 'USAGE: gforce <remote branch>'
            return 1
        fi

        git status | grep 'nothing to commit' &>/dev/null;
        if [ $? -eq 0 ]
        then
            git checkout $1
            if [ $? -eq 0 ]
            then
                git fetch upstream
                git fetch upstream --tags
                git reset --hard upstream/$1
            fi
        else
            gs
        fi
}
